{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "KeyCloak API",
      "description": "KeyCloak API information",
      "servers": ["http://localhost:3000"]
    },
    "host": "localhost:3000",
    "basePath": "/",
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],

    "paths": {
        "/login": {
          "parameters": [
                {
                  "name": "client_id",
                  "in": "body",
                  "required": true,
                  "description": "ID of Keycloak client",
                  "type": "string"
                },
                {
                    "name": "username",
                    "in": "body",
                    "required": true,
                    "description": "Login username",
                    "type": "string"
                },
                {
                    "name": "password",
                    "in": "body",
                    "required": true,
                    "description": "Login password",
                    "type": "string"
                },
                {
                    "name": "grant_type",
                    "in": "body",
                    "required": true,
                    "description": "Password grant_type",
                    "type": "password"
                }
              ],
          "post": {
            "tags": ["Login"],
            "summary": "Use to login in Keycloak",
            "responses": {
              "200": {
                "description": "A successful response",
                "schema": {
                  "$ref": "#/definitions/Login"
                }
              },
              "500": {
                "description": "Cannot connect to the server"
              }
            }
          }
        },
        "/users": {
            "post": {
            "summary": "Create new user",
              "tags": ["Users"],
              "description": "Create new user in system",
              "parameters": [
                {
                  "name": "access_token",
                  "in": "header",
                  "description": "KeyCloak token created when login"
                }
              ],
              "produces": ["application/json"],
              "responses": {
                "201": {
                  "description": "New user is created"
                }
              }
            },
            "get": {
                "summary": "Get all users",
                "tags": ["Users"],
                "description": "Return all users in system",
                "parameters": [
                  {
                    "name": "access_token",
                    "in": "header",
                    "description": "KeyCloak token created when login"
                  }
                ],
                "produces": ["application/json"],
                "responses": {
                  "200": {
                    "description": "All users are returned"
                  }
                }
              }
        },
        "/user/{id}": {
            "get": {
                "summary": "Get user with the given ID",
                "tags": ["Users"],
                "parameters": [
                    {
                      "name": "access_token",
                      "in": "header",
                      "description": "KeyCloak token created when login"
                    }
                  ],
                "responses": {
                  "200": {
                    "description": "User is returned",
                    "schema": {
                      "$ref": "#/definitions/User"
                    }
                  }
                }
              },
            "put": {
              "summary": "Update user with the given ID",
              "tags": ["Users"],
              "parameters": [
                {
                  "name": "access_token",
                  "in": "header",
                  "description": "KeyCloak token created when login"
                }
              ],
              "responses": {
                "200": {
                  "description": "User is updated",
                  "schema": {
                    "$ref": "#/definitions/User"
                  }
                }
              }
            },
            "patch": {
                "summary": "Patch user with the given ID",
                "tags": ["Users"],
                "parameters": [
                  {
                    "name": "access_token",
                    "in": "header",
                    "description": "KeyCloak token created when login"
                  }
                ],
                "responses": {
                  "200": {
                    "description": "User is updated",
                    "schema": {
                      "$ref": "#/definitions/User"
                    }
                  }
                }
              },
            "delete": {
                "summary": "Delete user with the given ID",
                "tags": ["Users"],
                "parameters": [
                    {
                      "name": "access_token",
                      "in": "header",
                      "description": "KeyCloak token created when login"
                    }
                  ],
                "responses": {
                  "200": {
                    "description": "User is deleted",
                    "schema": {
                      "$ref": "#/definitions/User"
                    }
                  }
                }
              }
          }
      },
      "definitions": {
        "Login": {
          "required": ["token_type", "access_token", "expires_in", "refresh_token", "referesh_expires_in"],
          "properties": {
            "token_type": {
              "type": "string"
            },
            "access_token": {
              "type": "string",
              "uniqueItems": true
            },
            "expires_in": {
              "type": "date"
            },
            "refresh_token": {
              "type": "string"
            },
            "referesh_expires_in": {
                "type": "date"
            }
          }
        }
      }
  }
